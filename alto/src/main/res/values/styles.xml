<resources>

    <!-- Base application theme. -->
    <style name="SeagateTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/seagate_green</item>
        <item name="colorPrimaryDark">@color/seagate_grey</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorControlNormal">@color/seagate_grey</item>
        <item name="colorControlHighlight">@color/seagate_grey</item>
        <item name="colorControlActivated">@color/lyve_blue</item>
